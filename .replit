run = "pip install -r requirements.txt && python main.py"
language = "python3"
entrypoint = "main.py"

[nix]
channel = "stable-22_11"

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"

[deployment.schedule]
type = "cron"
cron = "0 12 * * *"  # Run at 12:00 UTC every day

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_SLUG}"

[packages]
python3 = "python3" 